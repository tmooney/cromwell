# Tests that a runtime option to save call logs is copying said logs appropriately.

name: final_call_logs_dir_local
backends: [Local]
tags: [localdockertest]

testFormat: workflowsuccess

files {
  workflow: final_call_logs_dir/final_call_logs_dir.wdl
  options: final_call_logs_dir/final_call_logs_dir_local.options
}

fileSystemCheck: "local"
outputExpectations: {
  "/tmp/call_logs/wf_hello/<<UUID>>/call-hello/stdout": 1
  "/tmp/call_logs/wf_hello/<<UUID>>/call-hello/stderr": 1
  "/tmp/logs/workflow.<<UUID>>.log": 1
  "/tmp/outputs/wf_hello/<<UUID>>/call-hello/test.out": 1
  "/tmp/outputs/wf_hello/<<UUID>>/call-hello/array.out": 1
  "/tmp/outputs/wf_hello/<<UUID>>/call-hello/map.out": 1
  "/tmp/outputs/wf_hello/<<UUID>>/call-hello/left.out": 1
  "/tmp/outputs/wf_hello/<<UUID>>/call-hello/right.out": 1
}
